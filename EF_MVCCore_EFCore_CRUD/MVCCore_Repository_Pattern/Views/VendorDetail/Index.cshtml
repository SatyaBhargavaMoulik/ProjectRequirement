@model IEnumerable<DataAccessEFCore.RepoModelsEF.VendorInformationEF>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New Vendor</a>
</p>
<table class="table" border="1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VName)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VName)
            </td>
           
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.VID }) |
                @Html.ActionLink("Details", "Details", new {  id=item.VID }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.VID })
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
