@model MVCCore_Dropdown_Binding.Models.UserDetailViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

<h4>UserDetailViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">

                @for (var i = 0; i < Model.RolesInfo.Count; i++)
                {
                    <input type="checkbox" asp-for="@Model.RolesInfo[i].Selected" />
                    <label asp-for="@Model.RolesInfo[i].Selected">@Model.RolesInfo[i].RoleName</label>
                    <input type="hidden" asp-for="@Model.RolesInfo[i].RoleID" />
                    <input type="hidden" asp-for="@Model.RolesInfo[i].RoleName"/>
                }

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <br /><br />
            <hr />
            <table border="1">
                <tr><th>RoleID</th><th>Role Name</th></tr>
                @foreach (var eachRole in Model.RolesInfo)
                {
                    <tr><td>@eachRole.RoleID</td><td>@eachRole.RoleName</td></tr>
                }
            </table>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
